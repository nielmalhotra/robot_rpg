%html
  %head
    %title Project Arc
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    - if notice.present?
      %p#notice= notice
    - if flash[:errors].present?
      %ul.errors
        - flash[:errors].each do |error|
          %li#error= error
    = yield